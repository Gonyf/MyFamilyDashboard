@model MyFamilyDashboard.Data.TodoListDataModel


<ul id="todoList">
    <div id="todoDiv" class="header">
        <h2 style="margin:5px">My To Do List</h2>
        <input type="text" id="myInput" placeholder="What to do...?">
        <span onclick="newElement()" class="addBtn">Add</span>
    </div>
    @if (Model != null && Model.TodoItems != null)
    {
        @for (int i = 0; i < Model.TodoItems.Count(); i++)
        {
            var idtext = $"todoItem{i}";
            var completed = Model.TodoItems[i].Completed;
            var liClass = string.Empty;
            if (completed)
            {
                liClass = "checked";
            }
            <li id=@idtext class=@liClass>
                @Html.TextBoxFor(it => Model.TodoItems[i].Text)
                @Html.HiddenFor(it => Model.TodoItems[i].ID)
                @Html.HiddenFor(it => Model.TodoItems[i].Completed, new { @class = "completed" })
            </li>
        }
    }
</ul>
